@model IEnumerable<MyLeasing.Web.Data.Entities.Property>

@{
    ViewData["Title"] = "الرئيسية";
}

<style>

    body {
        background-color: #f5f5f5;
    }

    #MyTable_length {
        direction: ltr;
        margin-left: -101%;
        margin-bottom: 3%;
    }

    #MyTable_filter {
        position: absolute;
        margin-right: -98%;
        margin-bottom: 3%;
    }

    #MyTable_paginate {
        margin-top: 40px;
        margin-right: -75%;
    }
</style>

<div class="row" style="outline:none; border:none; margin-top:50px;">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title" style="text-align:center;">العقارات</h1>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                رقم العقار
                            </th>
                            <th>
                                نوع العقار
                            </th>
                            <th>
                                المالك
                            </th>
                            <th>
                                الحي
                            </th>
                            <th>
                                العنوان
                            </th>
                            <th>
                                طبيعة العقار
                            </th>
                            <th>
                                السعر
                            </th>
                            <th>
                                المساحة
                            </th>
                            <th>
                                متوفر
                            </th>
                            <th>
                                الصور
                            </th>
                            <th>
                                التفاصيل
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PropertyType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Owner.User.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Neighborhood)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Typeprop)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price) شيكل
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SquareMeters) متر
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsAvailable)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.PropertyImages.Count)
                                </td>
                                <td>
                                    <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id"><i class="glyphicon glyphicon-list"> </i> </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/bootstrap/dist/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
        $('#MyTable').DataTable({
            "language": {
                "url": "../lib/Arabic.json"
            }
        });
    </script>
}
