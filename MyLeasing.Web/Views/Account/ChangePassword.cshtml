@model MyLeasing.Web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغيير كلمة المرور";
}

<style>

    body, html {
        height: 100%;
        background-color: #F5F5F5;
    }

    .box {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        width: 400px;
        padding: 50px;
        background-color: #fff;
        border-radius: 5px;
        margin-top: 25px;
    }

        .box input {
            padding: 10px 0;
            margin-bottom: 30px;
            width: 100%;
            box-sizing: border-box;
            box-shadow: none;
            outline: none;
            border: none;
            border-bottom: 1px solid #f2f2f2;
        }

        .box form div {
            position: relative;
        }

            .box form div label {
                position: absolute;
                top: 10px;
                right: 0px;
                pointer-events: none;
                transition: .5s;
            }

        .box input:focus ~ label,
        .box input:valid ~ label {
            top: -12px;
            right: 0;
        }

        .box input:focus,
        .box input:valid {
            border-bottom: 1px solid #f2f2f2;
        }
</style>

<div class="box thumbnail">

    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div>

            <input asp-for="OldPassword" type="password" required="" />
            <label asp-for="OldPassword" style="color:#929384;">كلمة السر الحالية</label>
            <span style="margin-top:50px; right:0; position:absolute; " asp-validation-for="OldPassword" class="text-warning"></span>
        </div>

        <div>

            <input asp-for="NewPassword" type="password" required="" />
            <label asp-for="NewPassword" style="color:#929384;">كلمة السر الجديدة</label>
            <span style="margin-top:50px; right:0; position:absolute; " asp-validation-for="NewPassword" class="text-warning"></span>
        </div>

        <div>

            <input asp-for="Confirm" type="password" required="" />
            <label asp-for="Confirm" style="color:#929384;">تأكيد كلمة السر</label>
            <span style="margin-top:50px; right:0; position:absolute; " asp-validation-for="Confirm" class="text-warning"></span>
        </div>

        <div style="margin-bottom:-10px;">
            <input type="submit" value="تغيير كلمة السر" class="btn btn-info" style="margin-top:10px; border:none; outline: none;" />
            <button class="btn" style="border: none; outline: none;"><a asp-action="ChangeUser" style="color:#000; text-decoration:none;">البيانات الشخصية</a></button>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
