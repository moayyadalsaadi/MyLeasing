@model MyLeasing.Web.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<style>

.box{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 400px;
    padding:50px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    background-color:#fff;
    border-radius:5px;
}
.box input{
padding: 10px 0;
margin-bottom:30px ;
width: 100%;
box-sizing: border-box;
box-shadow: none;
outline: none;
border: none;
border-bottom:1px solid #f2f2f2;

}
.box form div{
    position: relative;
}
.box form div label{
position: absolute;
top: 10px;
right: 0px;
pointer-events: none;
transition: .5s;
}
.box input:focus ~ label,
.box input:valid ~ label
{
top:-12px;
right: 0;

}
.box input:focus,
.box input:valid
    border-bottom:1px solid #f2f2f2;
}

</style>


<div class="box" style="margin-top:20px;">
 <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div>
        <input type="text" asp-for="Email"  required="">
        <label>البريد الالكتروني</label>
        <span style="margin-top:50px;  right:0; position:absolute;" asp-validation-for="Email" class="text-danger"></span>
        

            </div>

            <div >
                <input type="submit" value="استعادة كلمة السر" class="btn btn-info" style="border:none; background-color:#31B0D5; color:#fff; margin-top:7px;" />
                <a asp-action="Login"><button type="button" class="btn btn-info" style="border:none; padding:9px;">تسجيل الدخول</button></a>
            </div>
        </form>
        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
