@model MyLeasing.Web.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "استعادة كلمة المرور";
}

<style>

    body {
        background-color: #F5F5F5;
    }

    .box {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        width: 400px;
        padding: 50px;
        background-color: #fff;
        border-radius: 5px;
    }

        .box input {
            padding: 10px 0;
            margin-bottom: 30px;
            width: 100%;
            box-sizing: border-box;
            box-shadow: none;
            outline: none;
            border: none;
            border-bottom: 1px solid #f2f2f2;
        }

        .box form div {
            position: relative;
        }

            .box form div label {
                position: absolute;
                top: 10px;
                right: 0px;
                pointer-events: none;
                transition: .5s;
            }

        .box input:focus ~ label,
        .box input:valid ~ label {
            top: -12px;
            right: 0;
        }

        .box input:focus,
        .box input:valid {
            border-bottom: 1px solid #f2f2f2;
        }
</style>


<div class="box thumbnail" style="margin-top:20px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div>
            <input type="text" asp-for="Email" required="">
            <label style="color:#929384;">البريد الالكتروني</label>
            <span style="margin-top:50px;  right:0; position:absolute;" asp-validation-for="Email" class="text-danger"></span>


        </div>

        <div>
            <input type="submit" value="استعادة كلمة المرور" class="btn" style="background-color:#31B0D5; color:#fff; margin-top:7px; border: none; outline: none;" />
            <a asp-action="Login"><button type="button" class="btn btn-default" style="border:none; outline: none; padding:9px; background-color:#E6E6E6;">تسجيل الدخول</button></a>
        </div>
    </form>
    <div class="text-success">
        <p>
            @ViewBag.Message
        </p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
