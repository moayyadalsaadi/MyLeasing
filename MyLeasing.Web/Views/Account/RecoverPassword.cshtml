@model MyLeasing.Web.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "استعادة كلمة المرور";
}

<style>

    body {
        background-color: #F5F5F5;
    }

    .box {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        width: 400px;
        padding: 50px;
        background-color: #fff;
        border-radius: 5px;
    }

        .box input {
            padding: 10px 0;
            margin-bottom: 30px;
            width: 100%;
            box-sizing: border-box;
            box-shadow: none;
            outline: none;
            border: none;
            border-bottom: 1px solid #f2f2f2;
        }

        .box form div {
            position: relative;
        }

            .box form div label {
                position: absolute;
                top: 5px;
                right: 0px;
                pointer-events: none;
                transition: .5s;
                  font-weight: blod;
                color:#000029;
            }

        .box input:focus ~ label,
        .box input:valid ~ label {
            top: -12px;
            right: 0;
             transition: .5s;
            font-size: 13px;
        }

        .box input:focus,
        .box input:valid {
           border-bottom:1px solid #97D7EA;
         transition: .5s;
        }
  input:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0 30px white inset !important;
    transition: background-color 5000s ease-in-out 0s;
} 
*{
 -webkit-user-select: none; /* Safari 3.1+ */
    -moz-user-select: none; /* Firefox 2+ */
    -ms-user-select: none; /* IE 10+ */
    user-select: none; /* Standard syntax */	
}
</style>


<div class="box thumbnail" style="margin-top:20px;">
    <form method="post">
        

        <div>
            <input type="text" asp-for="Email" required="">
            <label>البريد الالكتروني</label>
            <span style="margin-top:55px;  right:0; position:absolute;" asp-validation-for="Email" class="text-danger"></span>


        </div>

<div asp-validation-summary="ModelOnly" style="margin-right:-23px;" class="text-danger"></div>
       
<div class="text-success">
<p>
 @ViewBag.Message
</p>
</div>
    
        <div>
            <input type="submit" value="استعادة كلمة المرور" class="btn" style="background-color:#31B0D5; color:#fff; margin-top:13px; border: none; outline: none;" />
            <a asp-action="Login"><button type="button" class="btn btn-default" style="border:none; outline: none; padding:9px; margin-bottom:-10px; background-color:#E6E6E6;">إلغاء</button></a>
        </div>
    </form>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
