@model ReflectionIT.Mvc.Paging.PagingList<MyLeasing.Web.Data.Entities.Property>
@using ReflectionIT.Mvc.Paging;
@addTagHelper *,ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "الاستئجار";
}

<style>

    body {
        background-color: #F5F5F5;
    }
</style>

<div class="row" style="margin-top:70px;">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-5 col-xs-11  thumbnail " style="border-color:#e4e4e4; width: 229px;  border-radius:.2px; margin-right:10px;">
                @if (!string.IsNullOrEmpty(item.FirstImage))
                {
                    <img src="@Url.Content(item.FirstImage)" alt="Image" style="width:300px;height:300px;max-width: 100%; height:150px; margin-top:10px;" />
                }
                <br>
                <div>
                    نوع العقار :
                    @Html.DisplayFor(model => item.PropertyType.Name)
                </div>
                <div>
                    العنوان :
                    @Html.DisplayFor(model => item.Address)
                </div>
                <div>
                    السعر :
                    @Html.DisplayFor(modelItem => item.Price) شيكل
                </div>
                <hr>

                <a asp-action="DetailsProperty" class="btn btn-default" asp-route-id="@item.Id" style="margin-bottom:10px;">التفاصيل</a>
            </div>
        }
    </div>
</div>

<nav aria-label="Emploee paging">
    @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })
</nav>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}