@model MyLeasing.Web.Data.Entities.Property

@{
    ViewData["Title"] = "تفاصيل";
}

<style>

    body {
        background-color: #F5F5F5;
    }

    dl {
        width: 100%;
        display: flex;
    }

    dt, dd {
        display: table-cell;
        padding: 10px;
    }
</style>

<div style="margin-top:45px;">
    <span style="font-weight:bold;">تفاصيل العقار</span>
</div>

<hr />
<dl>
    <dt>
        نوع العقار :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.PropertyType.Name)
    </dd>


    <dt>
        الحي :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Neighborhood)
    </dd>

    <dt>
        العنوان :

    </dt>
    <dd>
        @Html.DisplayFor(model => model.Address)
    </dd>

    <dt>
        السعر :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Price) شيكل
    </dd>

    <dt>
        المساحة :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.SquareMeters) متر
    </dd>

    <dt>
        الغرف :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Rooms)
    </dd>

    <dt>
        متوفر :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.IsAvailable)
    </dd>
</dl>
<dl>
    <dt>
        طبيعة العقار :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Typeprop)
    </dd>

    <dt>
        لديها موقف سيارات :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.HasParkingLot)
    </dd>

    <dt>
        ملاحظات :
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Remarks)
    </dd>

</dl>
<div id="myDiv" style="width:100%;height:400px;"></div>

<hr>

<div>
    <a asp-action="AddImage" asp-route-id="@Model.Id" class="btn btn-info" style=" background-color:#31B0D5; border:none; color:#fff;">اضافة صور</a>
    <a asp-action="MyProperties" class="btn" style="background-color:#D1D1D1; color:#000; margin-right:5px;">الغاء</a>
</div>
<hr />

@if (Model.PropertyImages.Count == 0)
{
    <div class="alert alert-danger" role="alert" style="text-align:center;">
        لم يتم اضافة صور !
    </div>
}
else
{
    <div class="row">
        @if (Model.PropertyImages.Count > 0)
        {
            @foreach (var item in Model.PropertyImages)
            {
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <a href="@Url.Content(item.ImageUrl)" target="_blank"><img src="@Url.Content(item.ImageUrl)" alt="Image" class="img-thumbnail" style="width:300px; height:250px; margin-bottom:20px; margin-right:16px;" /></a>
                    <button data-id="@item.Id" class="btn btn-danger deleteImage" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                }
            }
        }
    </div>
}

<!--Delete Item-->
<div class="modal fade" id="deleteDialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete the record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTableImages').DataTable();
            $('#MyTableContracts').DataTable();
            // Delete item
            var item_to_delete;
            $('.deleteImage').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });
            $("#btnYesDelete").click(function () {
                window.location.href = '/Home/DeleteImage/' + item_to_delete;
            });
        });
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?"></script>
    <script type="text/javascript">

            //Set the Latitude and Longitude of the Map
            var myAddress = new google.maps.LatLng(@Model.Latitude, @Model.Longitude);

            //Create Options or set different Characteristics of Google Map
            var mapOptions = {
                center: myAddress,
                zoom: 15,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            //Display the Google map in the div control with the defined Options
            var map = new google.maps.Map(document.getElementById("myDiv"), mapOptions);

            //Set Marker on the Map
            var marker = new google.maps.Marker({
                position: myAddress,
                animation: google.maps.Animation.BOUNCE,
            });
            marker.setMap(map);
    </script>
}