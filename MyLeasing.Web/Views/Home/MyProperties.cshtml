@model MyLeasing.Web.Data.Entities.Owner

@{
    ViewData["Title"] = "عقاراتي";
}


<style>

    body {
        background-color: #f5f5f5;
    }

    #MyTable_length {
        direction: ltr;
        margin-left: -101%;
        margin-bottom: 3%;
    }

    #MyTable_filter {
        position: absolute;
        margin-right: -98%;
        margin-bottom: 3%;
    }

    #MyTable_paginate {
        margin-top: 40px;
        margin-right: -75%;
    }
</style>
<p style="text-align:center;">
    <a asp-action="AddProperty" asp-route-id="@Model.Id" class="btn btn-info" style="outline:none; border:none; margin-top:50px;"><i class="glyphicon glyphicon-plus"></i> انشاء جديد</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" style="text-align:center;">عقاراتي</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    @if (Model.Properties.Count == 0)
                    {
                        <h5>Not properties added yet.</h5>
                    }
                    else
                    {
                        <thead>
                            <tr>
                                <th>نوع العقار</th>
                                <th>طبيعة العقار</th>
                                <th>الحي</th>
                                <th>العنوان</th>
                                <th>السعر</th>
                                <th>المساحة</th>
                                <th>متوفر</th>
                                <th>الصور</th>
                                <th>تعديل</th>
                                <th>تفاصيل</th>
                                <th>حذف</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Properties)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PropertyType.Name)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.Typeprop)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Neighborhood)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price) شيكل
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SquareMeters) متر
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsAvailable)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PropertyImages.Count)
                                    </td>
                                    <td>
                                        <a asp-action="EditProperty" class="btn btn-default" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i> </a>
                                    </td>

                                    <td>
                                        <a asp-action="DetailsPropertyOwner" class="btn btn-default" asp-route-id="@item.Id"><i class="glyphicon glyphicon-list"> </i> </a>
                                    </td>

                                    <td>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/bootstrap/dist/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Home/DeleteProperty/' + item_to_delete;
            });
        });

        $('#MyTable').DataTable({
            "language": {
                "url": "../lib/Arabic.json"
            }
        });
    </script>
}
